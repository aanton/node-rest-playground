{
  "name": "node-rest-playground",
  "version": "1.0.0",
  "description": "Playground project for develop a REST API in NodeJS",
  "repository": {
    "type": "git",
    "url": "https://github.com/aanton/node-rest-playground.git"
  },
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon -r dotenv/config --exec babel-node src/index.js",
    "seed": "babel-node -r dotenv/config src/seed.js",
    "test": "DATABASE_URI=sqlite::memory jest",
    "test:watch": "DATABASE_URI=sqlite::memory jest --watch"
  },
  "author": "aanton",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash.random": "^3.2.0",
    "lodash.samplesize": "^4.2.0",
    "morgan": "^1.9.1",
    "sequelize": "^5.21.3",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-jest": "^25.1.0",
    "faker": "^4.1.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
